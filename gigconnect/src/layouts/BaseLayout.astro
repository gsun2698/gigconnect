---
import Nav from '../components/nav.astro'
import '../styles/global.css'
import Footer from '../components/Footer.astro'

interface Props {
  title?: string;
}
---

<html lang="en" class="bg-slate-900 text-slate-100 min-h-screen">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>GigConnect</title>
  </head>

  <body class="p-6">
    <!-- NAV BAR -->
    <header class="border-b border-slate-700 bg-slate-800/60 backdrop-blur-md">
      <Nav />
    </header>
    <!-- MAIN CONTENT -->
    <main class="flex-1 px-6 py-8 max-w-6xl mx-auto">
      <slot />
    </main>

    <!-- FOOTER -->
    <Footer />
  </body>
</html>